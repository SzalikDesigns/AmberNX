<theme>
<formatVersion>4</formatVersion>


<view name="system">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../assets/ov/ovbl.png</path>
         <zIndex>41</zIndex>
      </image>
	  
      <helpsystem name="help">
         <textColor>ffffff</textColor>
         <iconColor>464646</iconColor>
		 <pos>0.34 0.935</pos>
		 <fontPath>./../_inc/fonts/Oxygen-Regular.ttf</fontPath>
		 <fontSize>0.0285</fontSize>
      </helpsystem>	 
	  
      <text name="systemInfo">
         <alignment>left</alignment>
         <pos>0.89 0.920</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffbf00</color>
	     <fontSize>0.0415</fontSize>
         <zIndex>42</zIndex>	              
      </text>	  
</view>

  <view name="menu">
	<menuText name="menufooter">
		<color>777777FF</color>
	</menuText>
	<menuText name="menutext"> 
		<color>DFDCDC</color>
		<separatorColor>222222</separatorColor>
		<selectorColor>0293ab</selectorColor>
		<selectedColor>FFFFFF</selectedColor>
	</menuText>
	<menuTextSmall name="menutextsmall">
		<color>0eb6d6</color>
	</menuTextSmall>
	<menuText name="menutitle">
		<color>DFECFA</color>
	</menuText>
	<menuBackground name="menubg">
	    <color>0e4269</color>
		<path>./../_inc/back.png</path>
		<fadePath>./../_inc/fade.png</fadePath>
	</menuBackground>
</view>

  <view name="basic">
      <helpsystem name="help">
         <textColor>cbcbcb</textColor>
      </helpsystem>
	  
      <textlist name="gamelist">
         <selectorColor>403c3e</selectorColor>
         <selectedColor>ffffff</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
      </textlist>
	  
      <image name="background" extra="true">
         <path>./../_inc/basic.png</path>
		 <color>0e4269</color>
      </image>
   </view>  
 
   <view name="detailed">
      <helpsystem name="help">
         <textColor>cbcbcb</textColor>
      </helpsystem>	  
	
      <textlist name="gamelist">
         <selectorColor>403c3e</selectorColor>
         <selectedColor>ffffff</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
      </textlist>

      <image name="background" extra="true">
         <path>./../_inc/default-detailed.png</path>
		 <color>0e4269</color>
      </image>

	<datetime name="md_releasedate">
			<color>726f70</color>
	</datetime>

	<text name="md_developer, md_genre, md_description">
			<color>726f70</color>
	</text>
	
	<text name="md_description">
         <color>cbcbcb</color>
	</text>
	
   </view> 
   
    <view name="grid">
       <image name="background" extra="true">
         <path>./../assets/gov/govblue.png</path>
         <zIndex>11</zIndex>
      </image>
	  
       <helpsystem name="help">
         <textColor>cbcbcb</textColor>
         <iconColor>FFFFFF</iconColor>
      </helpsystem>	
  </view>
   
</theme>